<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#E53935"
            android:padding="20dp"
            android:elevation="6dp">


            <ImageView
                android:id="@+id/imgLogoCinemax"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/logo_cinemax"
                android:contentDescription="Logo CineMax"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />


            <TextView
                android:id="@+id/tvCinemaxTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CineMax"
                android:textColor="#FFFFFF"
                android:textSize="46sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_toEndOf="@id/imgLogoCinemax"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp" />


            <ImageButton
                android:id="@+id/btn_salir"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="Apagar"
                app:srcCompat="@android:drawable/ic_lock_power_off"
                app:tint="@android:color/white" />

        </RelativeLayout>


        <View
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:background="#E53935"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="35dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/borde_sutil"
                android:padding="10dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/icono_fondo"
                    android:gravity="center"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/camara" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnBuscarPelicula"
                    android:layout_width="270dp"
                    android:layout_height="65dp"
                    android:text="Buscar pelÃ­cula"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:stateListAnimator="@null" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/borde_sutil"
                android:padding="10dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/icono_fondo"
                    android:gravity="center"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/cine" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnBuscarCine"
                    android:layout_width="270dp"
                    android:layout_height="65dp"
                    android:text="Buscar cine"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:stateListAnimator="@null" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/borde_sutil"
                android:padding="10dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/icono_fondo"
                    android:gravity="center"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/precio" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnVerPrecios"
                    android:layout_width="270dp"
                    android:layout_height="65dp"
                    android:text="Ver precios"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:stateListAnimator="@null" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/borde_sutil"
                android:padding="10dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/icono_fondo"
                    android:gravity="center"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/horario" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnHorarios"
                    android:layout_width="270dp"
                    android:layout_height="65dp"
                    android:text="Horarios"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:stateListAnimator="@null" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
