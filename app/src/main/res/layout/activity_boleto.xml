<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroUs">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="56dp"
        android:text="REGISTRO"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="213dp"
        android:layout_height="206dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
        app:srcCompat="@drawable/logo_cinemax"
        tools:layout_editor_absoluteX="99dp" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="193dp"
        android:layout_height="47dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="61dp"
        android:backgroundTint="#C72A2A"
        android:text="Registrarse"
        android:textColorLink="#C72A2A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_fecNac"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txt_nombreReg"
        android:layout_width="281dp"
        android:layout_height="41dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/edittext_oval"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/txt_usuarioReg"
        android:layout_width="281dp"
        android:layout_height="39dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_oval"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombreReg" />

    <EditText
        android:id="@+id/txt_passReg"
        android:layout_width="279dp"
        android:layout_height="40dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_oval"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_usuarioReg" />

    <EditText
        android:id="@+id/txt_fecNac"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_oval"
        android:ems="10"
        android:hint="Fecha de nacimiento"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_passReg" />

</androidx.constraintlayout.widget.ConstraintLayout>