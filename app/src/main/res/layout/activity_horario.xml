<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Horarios">

    <!-- Header con botón atrás, título y ícono -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Atrás -->
        <ImageButton
            android:id="@+id/btnAtras"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#000000"
            android:contentDescription="Atrás"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CineMax"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconoCine"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_media_play"
            android:tint="#C72A2A"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Línea divisoria -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader"/>

    <!-- ScrollView con contenido -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título Horarios -->
            <TextView
                android:id="@+id/txtHorarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horarios"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/txtSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona un cine"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <!-- Spinner 1: ABC el Saler -->
            <Spinner
                android:id="@+id/spinnerCine1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/spinner_border"
                android:padding="10dp"
                android:layout_marginBottom="15dp"
                android:spinnerMode="dropdown"/>

            <!-- Spinner 2: Cines Nuevo Centro -->
            <Spinner
                android:id="@+id/spinnerCine2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/spinner_border"
                android:padding="10dp"
                android:layout_marginBottom="15dp"
                android:spinnerMode="dropdown"/>

            <!-- Spinner 3: Artis -->
            <Spinner
                android:id="@+id/spinnerCine3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/spinner_border"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:spinnerMode="dropdown"/>

            <!-- Cuadro de funciones disponibles -->
            <LinearLayout
                android:id="@+id/layoutFunciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_border"
                android:padding="15dp"
                android:layout_marginBottom="20dp">

                <!-- Película 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="El Escudo Mundo de Rock"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:textSize="14sp"
                        android:textColor="#C72A2A"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:20  8:40  10:20"
                        android:textColor="#C72A2A"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Película 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="El Titanic"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:textSize="14sp"
                        android:textColor="#C72A2A"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:30  8:40  10:20"
                        android:textColor="#C72A2A"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Película 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pocahontas"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:textSize="14sp"
                        android:textColor="#C72A2A"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:20  8:40  10:20"
                        android:textColor="#C72A2A"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Película 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Coco"
                        android:textColor="#000000"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:textSize="14sp"
                        android:textColor="#C72A2A"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:20  8:40  10:20"
                        android:textColor="#C72A2A"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Spinner 4: Acteon -->
            <Spinner
                android:id="@+id/spinnerGenero"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/spinner_border"
                android:padding="10dp"
                android:layout_marginBottom="30dp"
                android:spinnerMode="dropdown"/>

            <!-- Botón Volver al inicio -->
            <Button
                android:id="@+id/btn_volverInicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#C72A2A"
                android:text="Volver al inicio"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>