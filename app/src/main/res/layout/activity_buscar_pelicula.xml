<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".BuscarPelicula">

    <!-- ðŸ”´ ENCABEZADO -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/cinemax_red"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_cinemax"
            android:contentDescription="@string/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CineMax"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- ðŸ”Ž BARRA DE BÃšSQUEDA -->
    <LinearLayout
        android:id="@+id/layoutBusqueda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/txt_buscarPelicula"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_oval"
            android:hint="Buscar"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/text_primary"/>

        <Button
            android:id="@+id/btnBuscarPel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Buscar"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/cinemax_red"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
    </LinearLayout>


    <!-- ðŸ”½ SPINNER -->
    <Spinner
        android:id="@+id/btnBuscarCat"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:entries="@array/filter_options"
        app:layout_constraintTop_toBottomOf="@id/layoutBusqueda"
        app:layout_constraintStart_toStartOf="parent"/>


    <!-- ðŸŽž RECYCLERVIEW CON SCROLL FUNCIONAL -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPeliculas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_pelicula"
        app:layout_constraintTop_toBottomOf="@id/btnBuscarCat"
        app:layout_constraintBottom_toTopOf="@id/btnFlecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- ðŸ”™ BOTÃ“N VOLVER -->
    <Button
        android:id="@+id/btnFlecha"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="Volver"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/cinemax_red"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
