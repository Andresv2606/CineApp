<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo ligeramente más notorio -->
    <solid android:color="#F1F3F6" />

    <!-- Borde más visible (gris medio) -->
    <stroke
        android:width="2dp"
        android:color="#B0B0B0" />

    <!-- Esquinas más redondeadas -->
    <corners android:radius="16dp" />

    <!-- Espaciado interno -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
